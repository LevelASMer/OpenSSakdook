<div metal:use-macro="layout">
  <div metal:fill-slot="content">
    <h1>Edit Commands</h1>
    <p><a href="/command/add">Add Command</a></p>
    <table>
      <tbody>
        <tr>
          <th>Command</th>
          <th>Description</th>
          <th>Cooltime</th>
          <th>Edit</th>
        </tr>
        <tr tal:repeat="commands command">
          <td>${commands[1]}</td>
          <td>${commands[2]}</td>
          <td>${commands[3]}</td>
          <td>
            <a class="button edit" href="/command/edit/${commands[0]}">Edit</a>
            <a class="button delete" href="/command/delete/${commands[0]}">Delete</a>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>