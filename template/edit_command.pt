<div metal:use-macro="layout">
  <div metal:fill-slot="content">
    <form method="post" action="/command/edit/${id}">
      <h1>Edit Commannd</h1>
      <p><a href="javascript:history.back()">Back to edit commands</a></p>
      <h2>Command</h2>
      <input type="text" id="command" name="command" class="control" placeholder="Enter your command" value="${command[0]}">
      <h2>Description</h2>
      <textarea class="control" id="description" name="description" placeholder="Enter your description">${command[1]}</textarea>
      <h2>Cooltime</h2>
      <p><input type="range" id="cooltime" name="cooltime" min="1" max="60" value="${command[2]}"></p>
      <button type="submit" id="process" name="process" class="button">Submit</button>
    </form>
  </div>
</div>